        <field name="name">Sub Station User</field>
        <field name="model_id" ref="model_fuel_station" />
        <!-- <field name="groups" eval="‘fuelstation.sub_station_group" /> -->

        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="0" />
